                android:layout_height="wrap_content"
                android:background="@color/lightBeige"
                android:lineSpacingExtra="4dp"
                android:padding="8dp"
                android:textColor="@color/darkBrown"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

